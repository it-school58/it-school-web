	display: block;
	margin: 20px 0;
	object-fit: contain;
	object-position: center center;
	border-radius: .25rem;
	box-shadow:
		0 16px 24px 2px rgba(33,37,41,.02),
		0 6px 30px 5px rgba(33,37,41,.04),
		0 8px 10px -5px rgba(33,37,41,.1);
}


